<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent"

    >

    <TextView
        android:id="@+id/rest_name_textView"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/price_name_textView"
        android:layout_alignParentStart="true"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLines="2"
        android:text="Rest Name"
        android:textAppearance="?android:textAppearanceLarge" />

    <TextView
        android:id="@+id/price_name_textView"
        android:layout_width="105dp"
        android:layout_height="58dp"
        android:maxLines="2"
        android:ellipsize="end"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:gravity="center"
        android:text="Price"
        android:textAppearance="?android:textAppearanceLarge" />

    <TextView
        android:id="@+id/post_name_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="141dp"
        android:ellipsize="end"
        android:gravity="center"
        
        android:text="Post"
        android:textAppearance="?android:textAppearanceLarge" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="18dp"
        android:gravity="center"
        android:maxLines="2"
        android:text="Restaurant Name" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="2"

        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="37dp"
        android:text="Price" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="115dp"
        android:maxLines="2"
        android:text="Your Thoughts" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/textView3"
        android:maxLines="2"
        android:text="What Did You Get?" />

    <TextView
        android:id="@+id/what_you_got_textView"
        android:layout_width="118dp"
        android:layout_height="55dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/textView3"
        android:gravity="center"
        android:maxLines="2"
        android:text="Your Order"
        android:textAppearance="?android:textAppearanceLarge" />

</RelativeLayout>